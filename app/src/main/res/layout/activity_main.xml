<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btnOptionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu 1: Options Menu" />

    <Button
        android:id="@+id/btnContextMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu 2: Context Menu" />

    <Button
        android:id="@+id/btnContextualAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu 3: Contextual Action Bar" />

    <Button
        android:id="@+id/btnPopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu 4: Popup Menu" />
</LinearLayout>
